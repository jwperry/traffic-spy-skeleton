<%= erb :"_id_navbar", locals: { identifier: @identifier } %>
<div class="container app_details">
  <div class="outer-panel">
    <h1>Application Event Details</h1>

    <h2 class="target_title"><%= @event_name %></h2>

    <div class="row">

      <div class="col s6">
        <div class="card-panel white">
          <span class="card-title">Events by Hour: </span>
          <% @event.event_by_hour.each do |k, v|  %>
          <p>Hour: <span class="data"><%= k %></span>, Count: <span class="data"><%= v %></span>
          <% end %>
        </div>
      </div>

      <div class="col s6">
        <div class="card-panel white">
          <span class="card-title">Total Event Count: </span>
          <span class="data"><%= @event.total_event_count %></span>
        </div>
      </div>

    </div>
  </div>
</div>
